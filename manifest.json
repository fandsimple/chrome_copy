{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "文章复制工具",
  // 插件的版本
  "version": "1.0.0",
  // 插件描述
  "description": "文章内容提取",
  // 图标，一般偷懒全部用一个尺寸的也没问题
  "icons": {
    "16": "./img/icon.png",
    "48": "./img/icon.png",
    "128": "./img/icon.png"
  },
  "browser_action": {
    "default_icon": "./img/icon.png",
    // 图标悬停时的标题，可选
    "default_title": "文章内容提取",
    "default_popup": "./html/index.html"
  },
  "web_accessible_resources": [
    "js/baseJs/jquery-2.2.1.js",
    "js/baseJs/turndown.js",
    "js/export/csdn.js",
    "js/export/juejin.js",
    "js/export/bokeyuan.js",
    "js/export/jianshu.js"
  ],
  "content_scripts": [
    {
      "matches": [
        // CSDN
        "https://blog.csdn.net/*",
        // 掘金
        "https://juejin.im/post/*",
        // 博客园
        "https://www.cnblogs.com/*",
        // 简书
        "https://www.jianshu.com/*"

        // 携程 todo 有防注入检测
//        "https://hotels.ctrip.com/hotel/*"
      ],
      "js": [
        "./js/baseJs/jquery-2.2.1.js",
        "./js/contentJs/csdn.js",
        "./js/contentJs/juejin.js",
        "./js/contentJs/bokeyuan.js",
        "./js/contentJs/jianshu.js",
//        "./js/contentJs/xiecheng.js",
        "./js/contentJs/content.js"
      ],
      "css": [
        "./css/bootstrap.min.css"
      ],
      "run_at": "document_end"
    }
  ],
  //  "content_security_policy": "script-src 'self' https://unpkg.com/turndown@5.0.3/dist/turndown.js; object-src 'self'",
  "permissions": [
    "storage"
  ]
}


